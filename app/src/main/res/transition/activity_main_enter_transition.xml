<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:interpolator="@android:interpolator/decelerate_cubic">

    <slide
        android:slideEdge="top"
        android:duration="@integer/default_anim_duration">
        <targets>
            <target android:targetId="@id/appbar" />
        </targets>
        </slide>

    <slide
        android:slideEdge="bottom"
        android:duration="@integer/anim_duration_500"
        android:startDelay="@integer/anim_duration_200">
        <targets>
            <target android:targetId="@id/cardview_weather" />
        </targets>
    </slide>

    <slide
        android:slideEdge="bottom"
        android:duration="@integer/anim_duration_500"
        android:startDelay="@integer/default_anim_duration">
        <targets>
            <target android:targetId="@id/cardview_timeline" />
        </targets>
    </slide>

</transitionSet>